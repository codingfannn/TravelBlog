<h1 class="title">Edit Your Post</h1>

<form class="form-style" action="/post/{{post._id}}/edit" method="POST">
  <br />
  <label>Start vacation
    <input type="date" name="startVacation" value="{{post.startVacation}}" />
  </label>
  <br />
  <br />
  <label>End vacation
    <input type="date" name="endVacation" value="{{post.endVacation}}" />
  </label>
  <br />
  <br />
  <label>Title
    <input type="text" name="title" value="{{post.title}}" />
  </label>
  <br />
  <br />
  <label>Image
    <input type="image" name="image" value="{{post.image}}" />
  </label>
  <br />
  <br />
  <label>Text of your post:
  <br /> 
  <textarea id="text" name="text" cols="50" rows="20" >{{post.text}}</textarea>    
  </label>
  <br />
  <br />
  <button type="submit">Edit</button>
</form>